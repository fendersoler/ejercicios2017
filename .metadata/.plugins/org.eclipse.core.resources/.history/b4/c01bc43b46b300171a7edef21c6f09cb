package ejercicio82;

public interface LimitesSistema {
	
	int XMAX = 300;
	int XMIN = 0;
	int YMAX = 300;
	int YMIN = 0;
	
	public default Punto normalizar(int x, int y) {
		
		if (x> 300) {x=300;}
		else if(x< 0){x=0;}
		
		if (y> 300) {y=300;}
		else if(y< 0){y=0;}
		
		return Punto(x,y);
	}
	
	public String pintar();
}
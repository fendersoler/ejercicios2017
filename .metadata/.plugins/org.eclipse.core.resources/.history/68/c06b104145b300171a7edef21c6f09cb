package ejercicio82;

public interface LimitesSistema {
	
	int XMAX = 300;
	int XMIN = 0;
	int YMAX = 300;
	int YMIN = 0;
	
	public default void normalizar(int x, int y) {
		
		if (x> XMAX) {x=XMAX;}
		else if(x< XMIN){x=XMIN;}
		else {x=x;}
		
		if (y> YMAX) {y=YMAX;}
		else if(y< YMIN){y=YMIN;}
		else {y=y;}
	}
	
	public String pintar();
}
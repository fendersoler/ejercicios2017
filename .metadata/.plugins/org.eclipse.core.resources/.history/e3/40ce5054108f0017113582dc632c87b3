package cine;

import java.util.Arrays;
import java.util.concurrent.ThreadLocalRandom;

public class Prueba {

	public static void main(String[] args) {
		Pelicula pelicula = new Pelicula("Lo que el viento se llevo", 180, 16, "dlfgjsdlfgj");
		
		Cine cine = new Cine(8);
		cine.setPelicula(pelicula.getTitulo());
		
		System.out.println(cine);
		System.out.println(pelicula);
		
		int numeroEspectadores = ThreadLocalRandom.current().nextInt(10);//subir numero 
		System.out.println(numeroEspectadores);
		
		for(int i=0; i<numeroEspectadores ;i++){
			Espectador espectador = new Espectador();
		System.out.println(espectador);		
		
		String sala[][]= new String[8][9];
		int [] fila = {8,7,6,5,4,3,2,1};
		String[] letra = {"A","B","C","D","E","F","G","H","I"};
		
			for (int j = 0; j < fila.length; j++) {
				for (int k = 0; k < letra.length; k++) {
					sala[j][k] ="si";
					System.out.println(sala);
				}
			}			
	

			
		}		
	}
}
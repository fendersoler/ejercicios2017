package cine;

import java.util.concurrent.ThreadLocalRandom;

public class Prueba {

	public static void main(String[] args) {
		Pelicula pelicula = new Pelicula("Lo que el viento se llevo", 180, 16, "dlfgjsdlfgj");
		
		Cine cine = new Cine(8);
		cine.setPelicula(pelicula.getTitulo());
		
		System.out.println(cine);
		System.out.println(pelicula);
		
		int numeroEspectadores = ThreadLocalRandom.current().nextInt(1,10);//subir numero 
		System.out.println("Espectadores: " + numeroEspectadores);
		
		Espectador espectadores[]=new Espectador [numeroEspectadores];
		
		for(int i=0; i<numeroEspectadores ;i++){		
			espectadores[i] = new Espectador();
			System.out.println(espectadores[i]);
		}		
		
		Sala sala = new Sala();		
		System.out.println(sala);	
	}
}
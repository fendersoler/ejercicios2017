package cine;

import java.util.Arrays;
import java.util.concurrent.ThreadLocalRandom;

public class Prueba {

	public static void main(String[] args) {
		Pelicula pelicula = new Pelicula("Lo que el viento se llevo", 180, 16, "dlfgjsdlfgj");
		
		Cine cine = new Cine(8);
		cine.setPelicula(pelicula.getTitulo());
		
		System.out.println(cine);
		System.out.println(pelicula);
		
		int numeroEspectadores = ThreadLocalRandom.current().nextInt(10);//subir numero 
		System.out.println("Espectadores: " + numeroEspectadores);
		
		for(int i=0; i<numeroEspectadores ;i++){
		Espectador espectador = new Espectador();
		System.out.println(espectador);
		}		
		
		/*Realizaremos una pequeña simulación, en el que generaremos muchos espectadores y los sentaremos
		 * aleatoriamente (no podemos donde ya este ocupado).Sentaremos a los espectadores de uno en uno, 
		 * solo se podrá sentar si tienen el suficiente dinero, hay espacio libre y tiene edad para ver 
		 * la película, en caso de que el asiento este ocupado le buscamos uno libre.*/
		
	}
}
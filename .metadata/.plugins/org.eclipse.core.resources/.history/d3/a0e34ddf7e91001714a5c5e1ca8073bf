package cine;

import java.util.Arrays;

public class Sala {
	
	private int [] fila = {8,7,6,5,4,3,2,1};
	private String[] letra = {"A","B","C","D","E","F","G","H","I"};	
	private String sala[][]= new String[8][9];
	
	public Sala(){
		this.sala = butacaDisponible();
	}
	
	public  String[][] butacaDisponible(){
		for (int i = 0; i < 8; i++) {
			for (int j = 0; j < 9; j++) {
				sala [i][j]= "libre";
			}
		}
		return sala;
	}

	@Override
	public String toString() {
		
		String butacas[][]= new String[8][9];
		
		for (int i = 0; i < butacas.length; i++) {
			for (int j = 0; j < butacas.length; j++) {
				butacas[i][j]=fila[i] + letra [j] + sala[i][j];				
			}			
		}
		
		return "Sala "+Arrays.toString(butacas[0]);
		
		/*"\n"+ fila[0] + letra [0] + "("+(sala[0][0])+")" + fila[0] + letra [1] + "("+(sala[0][1])+")" 
				+ fila[0] + letra [2] + "("+(sala[0][2])+")"+ fila[0] + letra [3] + "("+(sala[0][3])+")"
				+ fila[0] + letra [4] + "("+(sala[0][4])+")"+ fila[0] + letra [5] + "("+(sala[0][5])+")"
				+ fila[0] + letra [6] + "("+(sala[0][6])+")"+ fila[0] + letra [7] + "("+(sala[0][7])+")"
				+ fila[0] + letra [8] + "("+(sala[0][8])+")"+"\n";*/
	}
}